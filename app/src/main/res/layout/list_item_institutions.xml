<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_cardview_problems"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#FFFFFF"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardViewUsersProblems"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/light_beige">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3"
            tools:layout_editor_absoluteX="275dp"
            tools:layout_editor_absoluteY="1dp">

            <TextView
                android:id="@+id/name_institution_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="IES La Senia"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/number_users_institution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Usuarios: 100"
                android:textColor="@android:color/holo_green_light" />

            <TextView
                android:id="@+id/solved_problems_institutions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Resueltos: 50"
                android:textColor="@android:color/holo_green_light" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>